extends /layout/tcap

block style
  meta(property="og:url", content=`${baseurl}tcap/`)
  style
      :sass
        body
          background-color: #F2F6F9
        #app
          overflow: hidden

block content
  #app.container.d-flex.flex-column.min-vh-100(v-cloak)
    h2.my-2.mb-3.text-center.title-color 預約入園詳細資料
    #ticket.mt-auto
      .card
        .card-body
          h5.m-0.text-center.text-blue 入園資訊
          h3.my-2.text-center.text-blue {{ order.date }}
          .d-flex(v-if="order.tickets.normal")
            p.m-0.my-1.mr-2 全票　
            small.my-auto.text-gray-light (一般民眾)
            p.m-0.mx-1.ml-auto {{order.tickets.normal}} 張
          .d-flex(v-if="order.tickets.student")
            p.m-0.my-1.mr-2 優待票
            small.my-auto.text-gray-light (學生或 7~12 歲兒童)
            p.m-0.mx-1.ml-auto {{order.tickets.student}} 張
          .d-flex(v-if="order.tickets.freeOld")
            p.m-0.my-1.mr-2 免費票
            small.my-auto.text-gray-light (長者或愛心及陪伴者)
            p.m-0.mx-1.ml-auto {{order.tickets.freeOld}} 張
          .d-flex(v-if="order.tickets.free6")
            p.m-0.my-1.mr-2 免費票
            small.my-auto.text-gray-light (6 歲以下兒童)
            p.m-0.mx-1.ml-auto {{order.tickets.free6}} 張
          .d-flex(v-if="order.tickets.freeOther")
            p.m-0.my-1.mr-2 免費票
            small.my-auto.text-gray-light (其他)
            p.m-0.mx-1.ml-auto {{order.tickets.freeOther}} 張
      .circle-area.d-flex.flex-column
        .circle.circle-left
        .outline.mx-3
        .circle.circle-right
      .card
        .card-body
          h5.card-title.text-center.text-blue 聯絡資訊
          p.m-0.my-1 姓名：{{ order.ctx.name }}
          p.m-0.my-1 電話：{{ order.ctx.phone }}
          p.m-0.my-1 電子郵件：{{ order.ctx.email }}
      .tri-area
        .outline
    .mb-3(v-if="order.status === 'normal'")
      .row.d-flex.mx-n1.mt-3
        .col-4.px-1: a.btn.btn-outline-primary.btn-block(href=`${baseurl}tcap/page-1-4.html`) 回上頁
        .col-8.px-1: button.my-0.btn.btn-block.btn-primary(type="button", @click="btnShare") 分享行程
      .row.d-flex.mx-n1.mt-2
        .col-4.px-1: button.my-0.btn.btn-block.btn-outline-secondary(type="button", @click="btnOrderDel") 取消
        .col-8.px-1: button.my-0.btn.btn-block.btn-danger(type="button", @click="btnCheckin") 核銷入園
    .mb-3(v-else-if="order.status === 'early'")
      button.my-0.mt-3.btn.btn-block.btn-primary(type="button", @click="btnShare") 分享行程
      .row.d-flex.mx-n1.mt-2
        .col-6.px-1: a.btn.btn-outline-primary.btn-block(href=`${baseurl}tcap/page-1-4.html`) 回上頁
        .col-6.px-1: button.my-0.btn.btn-block.btn-outline-secondary(type="button", @click="btnOrderDel") 取消
    .mb-3(v-else-if="order.status === 'checked'")
      .row.d-flex.mx-n1.mt-3
        .col-4.px-1: a.btn.btn-outline-primary.btn-block(href=`${baseurl}tcap/page-1-4.html`) 回上頁
        .col-8.px-1: button.my-0.btn.btn-block.btn-primary(type="button", @click="btnShare") 分享行程
    .mb-3(v-else-if="order.status === 'expired'")
      button.mt-2.btn.btn-block.btn-secondary(type="button", disabled) 已過期
      button.mt-2.btn.btn-block.btn-danger(type="button", @click="btnOrderDel") 刪除紀錄

block script
  script.
    window.vm = new Vue({
      el: '#app',
      data: {
        order: {
          checkin: false,
          date: '2021-10-07',
          status: 'normal',
          tickets: {
            free6: 2,
            freeOld: 1,
            freeOther: 1,
            normal: 3,
            student: 2,
          },
          ctx: {
            name: 'xxx',
            phone: '09********',
            email: 'xxxxx@xxxx.com.tw',
          },
        },
      },
      methods: {
        async btnCheckin () {
          const result = await Swal.fire({
            cancelButtonText: '取消',
            confirmButtonColor: '#dc3545',
            confirmButtonText: '確定',
            icon: 'warning',
            focusCancel: true,
            showCancelButton: true,
            text: '核銷按鈕請工作人員點選，如不慎誤觸核銷，請自行負責',
            title: '<h2 class="swal-title">核銷入園</h2>',
          })
          if (!result.value) return

          this.$set(this.order, 'checkin', true)
          this.$set(this.order, 'status', 'checked')

          const lineOA = await Swal.fire({
            confirmButtonText: '前往 LINE 官方帳號',
            icon: 'success',
            text: '入園成功，感謝您的支持',
            title: '<h2 class="swal-title">恭喜入園</h2>',
          })
          if (!lineOA.value) return
          window.open('https://line.me/R/ti/p/#{lineatOaId}')
        },
        async btnOrderDel () {
          const order = this.order
          const isExpired = order.status === 'expired'
          const result = await Swal.fire({
            cancelButtonText: '取消',
            confirmButtonColor: '#dc3545',
            confirmButtonText: '確定',
            focusCancel: true,
            icon: 'warning',
            showCancelButton: true,
            text: isExpired ? '請問您確定要刪除此次的入園資訊嗎？' : '請問您確定要取消此次的入園預約嗎？',
          })
          if (!result.value) return

          const lineOA = await Swal.fire({
            confirmButtonText: '前往 LINE 官方帳號',
            icon: 'success',
            text: isExpired ? '刪除 入園資訊 成功' : '取消 入園預約 成功',
            title: `<h2 class="swal-title">${isExpired ? '成功刪除' : '成功取消'}</h2>`,
          })
          if (!lineOA.value) {
            location.href = 'page-1-4.html'
            return
          }
          window.open('https://line.me/R/ti/p/#{lineatOaId}')
        },
        async btnShare () {
          const url = new URL('https://liff.line.me/#{liffidTcap}')
          url.searchParams.set('redirect', window.encodeBase64url('/tcap/page-3-1.html'))
          location.href = url.href
          return await new Promise(resolve => {}) // 不會結束的 Promise
        },
      },
    })
