-
  const cachebust = Date.now()
  let title = '臺北市立兒童新樂園'
  let description = '臺北市立兒童新樂園。'
doctype html
block beforehtml
html
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, viewport-fit=cover, user-scalable=no")
    title= title
    meta(name="description", content=description)
    meta(property="og:description", content=description)
    meta(property="og:locale", content="zh_TW")
    meta(property="og:site_name", content="臺北市立兒童新樂園")
    meta(property="og:title", content=title)
    meta(property="og:type", content="website")
    block meta
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/font-awesome@4/css/font-awesome.min.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;700&display=swap")
    style
      :sass
        [v-cloak]
          display: none
        body, .h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6
          font-family: 'Noto Sans TC', sans-serif
        .swal-title
          color: #21205B
          font-weight: 600
        .title-color
          color: #21205B
        .text-blue
          color: #4478DD
        .text-gray
          color: rgb(112,112,112)
        .text-gray-light
          color: rgba(112,112,112,.6)
        .text-red
          color: #DC3545
        #ticket
          & .card
            box-shadow: 0 2px 8px rgba(0, 0, 0, .08)
            border: none
            border-radius: 10px 10px 0px 0px
          & .circle-area
            position: relative
            & .outline
              height: 3px
              background-image: linear-gradient(to left, #F2F6F9 0%, #F2F6F9 80%, transparent 50%)
              background-size: 15px 3px
              background-repeat: repeat-x
              background-color: white
          & .circle
            background-color: #F2F6F9
            border-radius: 99px
            border: solid 1px #F2F6F9
            height: 40px
            position: absolute
            top: -20px
            width: 45px
            z-index: 1
            &.circle-left
              left: -25px
            &.circle-right
              right: -25px
          & .tri-area
            position: relative
            background-color: white
            & .outline
              height: 20px
              background-image: linear-gradient(45deg, transparent 33.33%, #F2F6F9 33.33%, #F2F6F9 66.66%, transparent 66.66%), linear-gradient(-45deg, transparent 33.33%, #F2F6F9 33.33%, #F2F6F9 66.66%, transparent 66.66%)
              background-size: 15px 30px
    block style
  body
    include /component/livereload
    include /component/vconsole
    block content
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/dayjs@1/dayjs.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/jquery@3/dist/jquery.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/js-base64@2/base64.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/json5@2/dist/index.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/lodash@4/lodash.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/moment@2/moment.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/popper.js@1/dist/umd/popper.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/qs@6/dist/qs.min.js")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/sweetalert2@10")
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.min.js")
    //- bootstrap require jquery and pupper
    script(crossorigin="anonymous", src="https://cdn.jsdelivr.net/npm/bootstrap@4/dist/js/bootstrap.min.js")
    script(src=`${baseurl}js/common.js?cachebust=${cachebust}`)
    block script
